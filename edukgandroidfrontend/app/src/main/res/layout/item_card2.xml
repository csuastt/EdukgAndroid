<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="15dp"

    android:clickable="true"
    android:focusable="true"

    android:foreground="?selectableItemBackground"
    android:padding="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scan_edge"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stag_item_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginTop="@dimen/top_text_card"

                android:layout_marginRight="@dimen/normalPadding"


                android:fontFamily="@font/bariol_bold"
                android:text="@string/title_topic_course"
                android:textColor="@color/darkTextColor"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/stag_item_quantity_course"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginTop="@dimen/top_text_subtitle_card"

                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginBottom="@dimen/normalPadding"

                android:fontFamily="@font/bariol_bold"

                android:text="@string/number_courses"
                android:textColor="@color/dashboard_subtitle"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/card_view_image"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            android:src="@drawable/course_design_thinking" />


    </LinearLayout>

</androidx.cardview.widget.CardView>