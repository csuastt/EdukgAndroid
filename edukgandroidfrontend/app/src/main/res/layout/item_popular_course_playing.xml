<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_popular_course_playing"

    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/top_text_subtitle_card"
        android:layout_marginEnd="@dimen/top_text_subtitle_card"
        android:layout_marginBottom="@dimen/top_text_subtitle_card"
        android:adjustViewBounds="true"
        android:background="@drawable/option1"
        android:padding="12dp"
        android:src="@drawable/ic_play" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"


        android:orientation="vertical">

        <TextView
            style="@style/viewParent.headerText"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:fontFamily="@font/bariol_regular"
            android:text="识别结果-Item1"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bariol_regular"
            android:text="简介..."
            android:textColor="@color/bottomNavigationTextColor" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryText"
            android:text="点击查看详情" />

    </LinearLayout>
</LinearLayout>