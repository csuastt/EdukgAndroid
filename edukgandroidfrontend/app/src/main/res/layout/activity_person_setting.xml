<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color_login"
    tools:context=".activities.PersonSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detail_pad"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/description"
            android:layout_width="330dp"
            android:layout_height="230dp"
            android:background="@drawable/edge2"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:visibility="gone" />

        <CheckedTextView
            android:id="@+id/man_checked"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:background="@drawable/edge1"
            android:checked="false"
            android:gravity="center"
            android:onClick="clickMan"
            android:paddingLeft="20dp"
            android:text="男生"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="gone" />

        <CheckedTextView
            android:id="@+id/woman_checked"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:background="@drawable/edge1"
            android:checked="false"
            android:gravity="center"
            android:onClick="clickWoman"
            android:paddingLeft="20dp"
            android:text="女生"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/nickname"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="#A5A5A5"
            android:hint="请输入昵称"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="#A5A5A5"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="#A5A5A5"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/new_password2"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:backgroundTint="#A5A5A5"
            android:hint="再次确认新密码"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/confirm_edit"
            android:layout_width="330dp"
            android:layout_height="62dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/quit_button_pad"
            android:gravity="center"
            android:onClick="confirmEdit"
            android:text="确认修改"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cancel_edit"
            android:layout_width="330dp"
            android:layout_height="62dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cancel_button_pad"
            android:gravity="center"
            android:onClick="cancelEdit"
            android:text="取消修改"
            android:textSize="20sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>