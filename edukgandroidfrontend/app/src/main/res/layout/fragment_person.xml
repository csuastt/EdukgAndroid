<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_courses"
    android:gravity="fill_vertical"
    android:orientation="vertical"
    tools:context=".ui.menuperson.PersonFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/whole_layout"
        style="@style/parent.contentLayout"
        android:background="@color/back_courses"
        android:paddingBottom="@dimen/normalPadding">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/home_courses"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="266dp"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingRight="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/personal_info_click_login"
                            android:layout_width="90dp"
                            android:layout_height="94dp"
                            android:layout_marginTop="@dimen/normalPadding"
                            android:layout_marginBottom="@dimen/normalPadding"
                            android:src="@drawable/student_girl" />

                        <TextView
                            android:id="@+id/nickname_personal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:fontFamily="@font/calibri"
                            android:text="Hi，欢迎登录"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/login_arrow"
                            android:layout_width="10dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="2"
                            android:src="@drawable/arrow_right2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/person_go2favorites"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="7dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/person_favorites"
                                android:layout_width="37dp"
                                android:layout_height="34dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/person_favorites" />

                            <TextView
                                android:id="@+id/textView_favorites"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="我的收藏"
                                android:textColor="@color/grey_dark"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/person_go2program"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/person_program"
                                android:layout_width="37dp"
                                android:layout_height="34dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/person_program" />

                            <TextView
                                android:id="@+id/textView_program"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="培养方案"
                                android:textColor="@color/grey_dark"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/person_go2question"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/person_question"
                                android:layout_width="37dp"
                                android:layout_height="34dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/person_question" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="知识问答"
                                android:textColor="@color/grey_dark"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/person_go2exercise"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="7dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/person_exercise"
                                android:layout_width="37dp"
                                android:layout_height="34dp"
                                android:layout_marginBottom="5dp"
                                android:src="@drawable/person_exercise" />

                            <TextView
                                android:id="@+id/textView_exercise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="专项练习"
                                android:textColor="@color/grey_dark"
                                android:textSize="16sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/learning_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_corner">

                    <TextView
                        android:id="@+id/text_more_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:paddingStart="20dp"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:text="更多惊喜"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"></TextView>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/text_more_service"
                        android:layout_marginBottom="20dp">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="79dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="79dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/person_go2search_practice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_search_practice"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/search_practice" />

                                    <TextView
                                        android:id="@+id/textView_search_practice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="搜索习题"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/person_go2search_detail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_search_detail"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/search_detail" />

                                    <TextView
                                        android:id="@+id/textView_search_detail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="搜索知识"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/person_go2change_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_change_password"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/change_password" />

                                    <TextView
                                        android:id="@+id/textView_change_password"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="修改密码"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/person_go2change_nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_change_nickname"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/change_nickname" />

                                    <TextView
                                        android:id="@+id/textView_change_nickname"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="修改昵称"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="79dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="79dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/person_go2change_sex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_change_sex"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/change_sex" />

                                    <TextView
                                        android:id="@+id/textView_change_sex"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="修改性别"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/person_go2change_description"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_description"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/change_description" />

                                    <TextView
                                        android:id="@+id/textView_description"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="修改介绍"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/person_go2scan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_scan"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/scan" />

                                    <TextView
                                        android:id="@+id/textView_scan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="知识扫描"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/person_go2about"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/person_about"
                                        android:layout_width="37dp"
                                        android:layout_height="34dp"
                                        android:layout_marginBottom="5dp"
                                        android:src="@drawable/about_us" />

                                    <TextView
                                        android:id="@+id/textView_about"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="关于我们"
                                        android:textColor="@color/grey_dark"
                                        android:textSize="16sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </TableRow>

                    </TableLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_corner"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="modifyPassword"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:id="@+id/textView_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="向我们反馈"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView_feedback"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/arrow_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_recommend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="modifyPassword"
                        android:orientation="horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:id="@+id/textView_recommend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="推荐小喵搜题"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView_recommend"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/arrow_right" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_more"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="modifyPassword"
                        android:orientation="horizontal"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp">

                        <TextView
                            android:id="@+id/textView_more"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="了解更多"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/imageView_more"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/arrow_right" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>