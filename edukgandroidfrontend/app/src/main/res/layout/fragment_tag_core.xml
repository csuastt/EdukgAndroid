<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_tag_core"
    android:background="@color/colorPrimary"
    tools:context=".ui.tagcore.TagCoreFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/back_courses"
        android:orientation="vertical">

        <include
            android:id="@+id/include_knowledge"
            layout="@layout/tag_titlebar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:animateLayoutChanges="true">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="我的科目"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="normal" />

            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/tag_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:padding="20dp"
                app:container_background_color="#EFEFEF"
                app:container_border_color="#EFEFEF"
                app:container_border_radius="0dp"
                app:container_enable_drag="false"
                app:horizontal_interval="10dp"
                app:tag_background_color="#FFFFFFFF"
                app:tag_border_color="#ffffff"
                app:tag_border_width="0dp"
                app:tag_clickable="true"
                app:tag_corner_radius="3dp"
                app:tag_cross_area_padding="16dp"
                app:tag_cross_width="2dp"
                app:tag_enable_cross="true"
                app:tag_horizontal_padding="10dp"
                app:tag_max_length="8"
                app:tag_selectable="true"
                app:tag_text_color="#575656"
                app:tag_text_size="16sp"
                app:tag_theme="none"
                app:tag_vertical_padding="13dp"
                app:vertical_interval="10dp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tag_group"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="可选科目"
                android:textColor="#000000"
                android:textSize="20dp" />


            <co.lujun.androidtagview.TagContainerLayout
                android:id="@+id/not_tag_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:padding="20dp"
                app:container_background_color="#EFEFEF"
                app:container_border_color="#EFEFEF"
                app:container_border_radius="0dp"
                app:container_enable_drag="false"
                app:horizontal_interval="10dp"
                app:tag_background_color="#FFFFFFFF"

                app:tag_border_color="#ffffff"
                app:tag_border_width="0dp"
                app:tag_clickable="true"

                app:tag_corner_radius="3dp"
                app:tag_cross_area_padding="16dp"
                app:tag_cross_width="2dp"
                app:tag_enable_cross="false"

                app:tag_horizontal_padding="33dp"
                app:tag_max_length="8"
                app:tag_selectable="true"
                app:tag_text_color="@color/link_color"
                app:tag_text_size="16sp"
                app:tag_theme="none"
                app:tag_vertical_padding="13dp"
                app:vertical_interval="10dp" />


        </RelativeLayout>


    </LinearLayout>

</FrameLayout>